# Configuration for Screen OCR LLM Tool
# Copy this file to .env and fill in your actual values.
# DO NOT commit the actual .env file to Git!

# Required: Your OpenRouter API Key (https://openrouter.ai/keys)
OPENROUTER_API_KEY="YOUR_OPENROUTER_API_KEY_HERE"

# Required: The OpenRouter model identifier
MODEL=google/gemma-3-12b-it

# Optional: Comma-separated list of OpenRouter providers (exact names, case-sensitive)
# If empty or omitted, uses OpenRouter's default provider routing
# User must provide correct provider names - no validation or capitalization changes
PROVIDERS=crusoe/bf16,novita/bf16,deepinfra/bf16

# Optional: Enable file logging for debugging
# Set to True to log to screen_ocr_debug.log, False or omit to disable.
ENABLE_FILE_LOGGING=False

# Optional: Custom hotkey (default: Ctrl+Shift+O)
# Try a less common combination to avoid conflicts
HOTKEY=Ctrl+Alt+q

SINGLEINSTANCE_PORT_START=54000
SINGLEINSTANCE_PORT_END=54050

